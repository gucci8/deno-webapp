<%- include('../partials/header.ejs') %>
<%- include('../partials/navbar.ejs') %>

<div class="container">
    <h1>How was your morning?</h1>
    <form method="POST" action="/behavior/reporting/morning">
        <fieldset>

            <div class="form-group">
                <label for="customRange1" class="form-label">Choose the morning you want to report:</label>
            </div>

            <div class="form-group">
                <input type="date" min="2020-01-01" max="2030-12-31" name="date" value="<%= date %>">
            </div>

            
            <div class="form-group">
                <label for="customRange1" class="form-label">How many hours did you sleep?</label>
            </div>

            <div class="form-group">
                <span class="font-weight-bold blue-text mr-2 mt-1">0</span>
                <input type="range" class="form-range" min="0" max="12" step="0.5" id="customRange1" name="sleepduration">
                <span class="font-weight-bold blue-text mr-2 mt-1">12</span>
            </div>


            <div class="form-group">
                <label for="customRange2" class="form-label">Rate your sleep quality:</label>
            </div>

            <div class="form-group">
                <span class="font-weight-bold blue-text mr-2 mt-1">1 (Bad)</span>
                <input type="range" class="form-range" min="1" max="5" step="1" id="customRange2" name="sleepquality">
                <span class="font-weight-bold blue-text mr-2 mt-1">5 (Perfect)</span>
            </div>


            <div class="form-group">
                <label for="customRange3" class="form-label">Rate your generic mood:</label>
            </div>

            <div class="form-group">
                <span class="font-weight-bold blue-text mr-2 mt-1">1 (Bad)</span>
                <input type="range" class="form-range" min="1" max="5" step="1" id="customRange3" name="genericmood">
                <span class="font-weight-bold blue-text mr-2 mt-1">5 (Perfect)</span>
            </div>


            <input type="submit" value="Rate your morning!" class="btn btn-primary" />
        </fieldset>
    </form>

    <ul>
        <li>
            <a href="/behavior/reporting/evening">Want to rate your evening instead?</a>
        </li>
        <li>
            <a href="/behavior/reporting">Back to reporting index page</a>
        </li>
    </ul>
</div>

<%- include('../partials/footer.ejs') %>